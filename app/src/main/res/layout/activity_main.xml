<!-- res/layout/activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Twister Finger"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/bestScoresTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best Scores"
        android:textSize="18sp"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/topScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Score: 100"
        android:layout_below="@id/bestScoresTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/viewAllScoresButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All Scores"
        android:layout_below="@id/topScore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/startGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:layout_below="@id/viewAllScoresButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/fingersSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/startGameButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Fingers: "
            android:textSize="18sp"/>



        <Button
            android:id="@+id/finger2"
            style="@style/DefaultButtonStyle"
            android:background="@drawable/number_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:onClick="onNumberClick"/>

        <Button
            android:id="@+id/finger3"
            style="@style/DefaultButtonStyle"
            android:background="@drawable/number_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:onClick="onNumberClick"/>

        <Button
            android:id="@+id/finger4"
            style="@style/DefaultButtonStyle"
            android:background="@drawable/number_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:onClick="onNumberClick"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/handsSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/fingersSelection"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Hands: "
            android:textSize="18sp"/>

        <Button
            android:id="@+id/hand1"
            style="@style/DefaultButtonStyle"
            android:background="@drawable/number_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:onClick="onNumberClick"/>

        <Button
            android:id="@+id/hand2"
            style="@style/DefaultButtonStyle"
            android:background="@drawable/number_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:onClick="onNumberClick"/>

        <Button
            android:id="@+id/hand3"
            style="@style/DefaultButtonStyle"
            android:background="@drawable/number_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:onClick="onNumberClick"/>

        <Button
            android:id="@+id/hand4"
            style="@style/DefaultButtonStyle"
            android:background="@drawable/number_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:onClick="onNumberClick"/>

        <Button
            android:id="@+id/hand5"
            style="@style/DefaultButtonStyle"
            android:background="@drawable/number_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:onClick="onNumberClick"/>
    </LinearLayout>

</RelativeLayout>
