<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="50dp" />
            <solid android:color="#CC3333" />
            <stroke android:width="2dp" android:color="#AA1111" />
            <shadowColor android:color="#BB2222" android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="50dp" />
            <solid android:color="#FF5858" />
            <stroke android:width="2dp" android:color="#DD2222" />
            <shadowColor android:color="#CC1111" android:radius="15dp" />
        </shape>
    </item>
</selector>
